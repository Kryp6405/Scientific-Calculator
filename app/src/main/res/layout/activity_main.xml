<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/t"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:autoSizeMaxTextSize="32sp"
        android:autoSizeMinTextSize="20sp"
        android:autoSizeTextType="uniform"
        android:gravity="center|right"
        android:maxLines="1"
        android:text="0"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.15"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.25"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="none"
            android:elegantTextHeight="false"
            android:maxLines="1"
            android:text="1"
            android:textSize="31sp" />

        <Button
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.25"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="none"
            android:maxLines="1"
            android:text="2"
            android:textSize="31sp" />

        <Button
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.25"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="none"
            android:maxLines="1"
            android:text="3"
            android:textSize="31sp" />

        <Button
            android:id="@+id/b4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.25"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="none"
            android:maxLines="1"
            android:text="/"
            android:textSize="31sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.15"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/b5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.25"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="none"
            android:maxLines="1"
            android:text="4"
            android:textSize="31sp" />

        <Button
            android:id="@+id/b6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.25"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="none"
            android:maxLines="1"
            android:text="5"
            android:textSize="31sp" />

        <Button
            android:id="@+id/b7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.25"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="none"
            android:maxLines="1"
            android:text="6"
            android:textSize="31sp" />

        <Button
            android:id="@+id/b8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.25"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="none"
            android:maxLines="1"
            android:text="*"
            android:textSize="31sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.15"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/b9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.25"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="none"
            android:maxLines="1"
            android:text="7"
            android:textSize="31sp" />

        <Button
            android:id="@+id/B1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.25"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="none"
            android:maxLines="1"
            android:text="8"
            android:textSize="31sp" />

        <Button
            android:id="@+id/B2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.25"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="none"
            android:maxLines="1"
            android:text="9"
            android:textSize="31sp" />

        <Button
            android:id="@+id/B3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.25"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="none"
            android:maxLines="1"
            android:text="-"
            android:textSize="31sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.15"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/B4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.25"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="none"
            android:maxLines="1"
            android:text="C"
            android:textSize="31sp" />

        <Button
            android:id="@+id/B5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.25"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="none"
            android:maxLines="1"
            android:text="0"
            android:textSize="31sp" />

        <Button
            android:id="@+id/B6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.25"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="none"
            android:maxLines="1"
            android:text="="
            android:textSize="31sp" />

        <Button
            android:id="@+id/B7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.25"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="none"
            android:maxLines="1"
            android:text="+"
            android:textSize="31sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/bC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.25"
                android:autoSizeTextType="uniform"
                android:text="2nd" />

            <Button
                android:id="@+id/bM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.25"
                android:text="HCM"
                android:textSize="22sp" />

            <Button
                android:id="@+id/p1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.25"
                android:text="("
                android:textSize="25sp" />

            <Button
                android:id="@+id/p2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.25"
                android:text=")"
                android:textSize="25sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="Krisnajit Rajeshkhanna's Personal Calculator: Class 1B"
            android:textColor="@color/black" />

    </LinearLayout>
</LinearLayout>